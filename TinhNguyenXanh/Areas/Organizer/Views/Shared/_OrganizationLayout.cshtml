<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ban tổ chức</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-light">
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="border-end bg-white shadow-sm" id="sidebar-wrapper" style="width:250px;">
            <div class="sidebar-heading bg-primary text-white text-center py-3 fw-bold">
                Tổ chức
            </div>
            <div class="list-group list-group-flush">
                <a asp-area="Organizer" asp-controller="Dashboard" asp-action="Index"
                   class="list-group-item list-group-item-action">
                    Dashboard
                </a>
                <a asp-area="Organizer" asp-controller="EventManagement" asp-action="Index"
                   class="list-group-item list-group-item-action">
                    Sự kiện
                </a>
                <a asp-area="Organizer" asp-controller="Volunteers" asp-action="Index"
                   class="list-group-item list-group-item-action">
                    Tình nguyện viên
                </a>
                <a asp-area="Organizer" asp-controller="Reports" asp-action="Index"
                   class="list-group-item list-group-item-action">
                    Báo cáo
                </a>
                <a asp-area="Organizer" asp-controller="Account" asp-action="Logout"
                   class="list-group-item list-group-item-action text-danger">
                    Đăng xuất
                </a>
            </div>
        </div>

        <!-- Page content -->
        <div id="page-content-wrapper" class="flex-grow-1">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
                <div class="container-fluid">
                    <button class="btn btn-outline-primary" id="menu-toggle">
                        Menu
                    </button>
                    <h5 class="ms-3 mb-0">@ViewData["Title"]</h5>
                    <div class="ms-auto d-flex align-items-center">
                        <span class="text-muted me-3">
                            @User.Identity?.Name
                        </span>
                    </div>
                </div>
            </nav>
            <div class="container-fluid py-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Bootstrap -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery & Validation -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <!-- Sidebar Toggle -->
    <script>
        document.getElementById("menu-toggle").addEventListener("click", () => {
            document.getElementById("wrapper").classList.toggle("toggled");
        });
    </script>

    <!-- Render Scripts từ View -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>