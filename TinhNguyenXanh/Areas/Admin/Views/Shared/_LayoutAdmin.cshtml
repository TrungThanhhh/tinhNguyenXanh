<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Tình Nguyện Xanh Admin</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary: #28a745;
            --primary-dark: #218838;
            --primary-light: #d4edda;
            --sidebar-bg: #1e3a2c;
            --sidebar-hover: #2d5a42;
            --text-light: #e9f7ef;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: #f8fff9;
            color: #333;
        }

        /* Top Navbar */
        .sb-topnav {
            background: linear-gradient(135deg, #28a745, #34ce57) !important;
            box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
            height: 70px;
            padding: 0 1.5rem;
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.5rem;
            color: white !important;
        }

        .navbar-brand i { font-size: 1.7rem; }

        /* Sidebar */
        #layoutSidenav_nav {
            position: fixed;
            top: 0; left: 0; bottom: 0;
            width: 280px;
            z-index: 1030;
        }

        .sb-sidenav {
            width: 280px;
            background: var(--sidebar-bg);
            height: 100vh;
            overflow-y: auto;
            transition: transform 0.3s ease;
        }

        .sb-sidenav-menu-heading {
            color: #a8e6b8;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 1rem 1.5rem 0.5rem;
            font-weight: 600;
        }

        .sb-sidenav .nav-link {
            color: #d0eeda !important;
            padding: 0.9rem 1.5rem;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .sb-sidenav .nav-link:hover,
        .sb-sidenav .nav-link.active {
            background: var(--sidebar-hover);
            color: white !important;
            padding-left: 2rem;
        }

        .sb-sidenav .nav-link.active {
            border-left: 4px solid var(--primary);
            background: rgba(40, 167, 69, 0.4) !important;
        }

        .sb-nav-link-icon { width: 40px; font-size: 1.1rem; }

        /* Main content */
        #layoutSidenav_content {
            margin-left: 280px;
            transition: margin-left 0.3s ease;
            min-height: 100vh;
        }

        main { padding-bottom: 4rem; }

        .page-title {
            font-size: 1.9rem;
            font-weight: 700;
            color: #155724;
            margin-bottom: 1.5rem;
        }

        /* Footer */
        footer {
            background: white;
            border-top: 1px solid #e0e0e0;
        }

        .sidebar-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.5);
            z-index: 1029;
        }
        .sidebar-overlay.active { display: block; }

        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: #f1f1f1; }
        ::-webkit-scrollbar-thumb { background: #28a745; border-radius: 4px; }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body class="sb-nav-fixed">

    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Top Navbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark shadow d-flex align-items-center">
        <a class="navbar-brand" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
            <i class="fas fa-seedling"></i> Tình Nguyện Xanh
        </a>

        <button class="btn btn-link text-white" id="sidebarToggle">
            <i class="fas fa-bars fa-lg"></i>
        </button>

        <ul class="navbar-nav ms-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-white d-flex align-items-center gap-2" 
                   id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown">
                    <i class="fas fa-user-circle fa-xl"></i>
                    <span class="d-none d-md-inline">Xin chào, @User.Identity?.Name</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end shadow">
                    <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Thông tin cá nhân</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-area="Identity" asp-page="/Account/Logout"
                              asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                              method="post" class="d-inline">
                            <button type="submit" class="dropdown-item text-danger">
                                <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                            </button>
                        </form>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <!-- Sidebar -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Tổng quan</div>
                        <a class="nav-link" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>

                        <div class="sb-sidenav-menu-heading">Quản lý</div>
                        <a class="nav-link" href="@Url.Action("Index", "Users", new { area = "Admin" })">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Tài khoản người dùng
                        </a>
                        <a class="nav-link active" href="@Url.Action("Index", "EventCategories", new { area = "Admin" })">
                            <div class="sb-nav-link-icon"><i class="fas fa-tags"></i></div>
                            Danh mục hoạt động
                        </a>
                        <a class="nav-link" href="@Url.Action("Index", "Events", new { area = "Admin" })">
                            <div class="sb-nav-link-icon"><i class="fas fa-calendar-check"></i></div>
                            Hoạt động
                        </a>
                        <a class="nav-link" href="@Url.Action("Index", "EventReports", new { area = "Admin" })">
                            <div class="sb-nav-link-icon"><i class="fas fa-flag text-warning"></i></div>
                            Báo cáo vi phạm
                            <span class="badge bg-danger ms-2">42</span>
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer text-center py-4">
                    <div class="small text-muted">Vai trò</div>
                    <strong class="text-white">Quản trị viên</strong>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div id="layoutSidenav_content">
            <main class="bg-light">
                <div class="container-fluid px-4 py-5">
                    <h1 class="page-title">@ViewData["Title"]</h1>
                    @RenderBody()
                </div>
            </main>

            <footer class="py-4 bg-white border-top">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small text-muted">
                        <div>Copyright © Tình Nguyện Xanh @DateTime.Now.Year</div>
                        <div>
                            <a href="#" class="text-decoration-none">Chính sách</a> ·
                            <a href="#" class="text-decoration-none">Điều khoản</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sidebar toggle script -->
    <script>
        const sidebar = document.querySelector('.sb-sidenav');
        const overlay = document.getElementById('sidebarOverlay');
        const content = document.getElementById('layoutSidenav_content');

        document.getElementById('sidebarToggle').addEventListener('click', () => {
            sidebar.classList.toggle('toggled');
            overlay.classList.toggle('active');
        });

        overlay.addEventListener('click', () => {
            sidebar.classList.remove('toggled');
            overlay.classList.remove('active');
        });

        window.addEventListener('resize', () => {
            if (window.innerWidth > 992) {
                sidebar.classList.remove('toggled');
                overlay.classList.remove('active');
                content.style.marginLeft = '280px';
            } else {
                content.style.marginLeft = '0';
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>