<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">

    <!-- Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --green-main: #4fbf6d;
            --green-dark: #31874c;
            --green-darker: #1f5d33;
            --sidebar-bg: #cfe9d8;
            --text-color: #1e3a29;
            --menu-hover: #b7dfc3;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: #e4f3e9;
            color: var(--text-color);
        }

        /* TOP NAV */
        .sb-topnav {
            height: 70px;
            background: linear-gradient(120deg, var(--green-main), var(--green-dark));
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.12);
        }

        .navbar-brand {
            font-weight: 700;
            color: #fff !important;
            font-size: 1.3rem;
            display: flex;
            align-items: center;
        }

        /* SIDEBAR */
        #layoutSidenav_nav {
            width: 260px;
            transition: width .3s ease;
        }

            #layoutSidenav_nav.minimized {
                width: 80px;
            }

        .sb-sidenav {
            position: fixed;
            background: var(--sidebar-bg);
            height: 100vh;
            padding-top: 80px;
            overflow-y: auto;
            transition: all .3s ease;
            box-shadow: 3px 0 15px rgba(0,0,0,0.08);
            width: 260px;
        }

            .sb-sidenav.minimized {
                width: 80px;
            }

        .sb-sidenav-menu-heading {
            padding: 10px 20px;
            text-transform: uppercase;
            font-size: .75rem;
            color: var(--green-darker);
            font-weight: 600;
            transition: opacity .3s;
        }

        /* Hide text when minimized */
        .sb-sidenav.minimized .sb-sidenav-menu-heading,
        .sb-sidenav.minimized .nav-link span {
            opacity: 0;
        }

        .sb-sidenav .nav-link {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 20px;
            color: var(--text-color);
            font-weight: 500;
            border-radius: 10px;
            margin: 4px 12px;
            transition: all .25s ease;
            white-space: nowrap;
        }

            .sb-sidenav .nav-link i {
                width: 24px;
                text-align: center;
            }

        /* Mini mode chỉ hiện icon */
        .sb-sidenav.minimized .nav-link {
            justify-content: center;
            padding: 12px 10px;
        }

            .sb-sidenav.minimized .nav-link span {
                display: none;
            }

        .sb-sidenav .nav-link:hover {
            background: var(--menu-hover);
            transform: translateX(5px);
        }

        .sb-sidenav .nav-link.active {
            background: var(--green-main);
            color: #fff !important;
            box-shadow: 0px 2px 8px rgba(0,0,0,0.18);
        }

        /* Content moves left-right */
        #layoutSidenav_content {
            margin-left: 260px;
            transition: margin-left .3s ease;
        }

            #layoutSidenav_content.minimized {
                margin-left: 80px;
            }

        /* Sidebar shrink toggle icon */
        .sidebar-collapse-btn {
            position: absolute;
            top: 15px;
            right: -18px;
            background: var(--green-main);
            color: #fff;
            padding: 6px 8px;
            border-radius: 50%;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
            cursor: pointer;
            transition: background .2s;
        }

            .sidebar-collapse-btn:hover {
                background: var(--green-dark);
            }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body class="sb-nav-fixed">

    <!-- TOP NAV -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark px-3">
        <a class="navbar-brand" href="#">
            <i class="fa-solid fa-leaf me-2"></i>Dashboard Admin
        </a>

        <ul class="navbar-nav ms-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-white" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown">
                    <i class="fas fa-user-circle fa-lg me-1"></i>
                    @User.Identity?.Name
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#"><i class="fa fa-user me-2"></i>Thông tin cá nhân</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                            <button class="dropdown-item text-danger">
                                <i class="fa fa-sign-out-alt me-2"></i>Đăng xuất
                            </button>
                        </form>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>

    <!-- LAYOUT -->
    <div id="layoutSidenav">

        <!-- SIDEBAR -->
        <nav id="layoutSidenav_nav">
            <div class="sb-sidenav" id="sidebar">

                <!-- icon thu gọn -->
                <div class="sidebar-collapse-btn" id="collapseSidebarBtn">
                    <i class="fa-solid fa-chevron-left"></i>
                </div>

                <div class="sb-sidenav-menu">

                    <div class="sb-sidenav-menu-heading">Tổng quan</div>

                    <a class="nav-link" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Thống kê</span>
                    </a>

                    <a class="nav-link" href="@Url.Action("Index", "Users", new { area = "Admin" })">
                        <i class="fas fa-users"></i>
                        <span>Tài khoản người dùng</span>
                    </a>

                    <a class="nav-link" href="@Url.Action("Index", "EventCategories", new { area = "Admin" })">
                        <i class="fas fa-tags"></i>
                        <span>Danh mục hoạt động</span>
                    </a>

                    <a class="nav-link" href="@Url.Action("Index", "Events", new { area = "Admin" })">
                        <i class="fas fa-calendar-check"></i>
                        <span>Hoạt động</span>
                    </a>

                </div>
            </div>
        </nav>

        <!-- CONTENT -->
        <div id="layoutSidenav_content">
            <main class="p-4">
                <h1 class="fw-bold">@ViewData["Title"]</h1>
                <div class="mt-4">
                    @RenderBody()
                </div>
            </main>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebar = document.getElementById("sidebar");
        const sidebarWrap = document.getElementById("layoutSidenav_nav");
        const content = document.getElementById("layoutSidenav_content");
        const collapseBtn = document.getElementById("collapseSidebarBtn");

        if (localStorage.getItem("sidebar-minimized") === "true") {
            sidebar.classList.add("minimized");
            sidebarWrap.classList.add("minimized");
            content.classList.add("minimized");

            collapseBtn.innerHTML = '<i class="fa-solid fa-chevron-right"></i>';
        }

        collapseBtn.addEventListener("click", () => {
            const isMinimized = sidebar.classList.toggle("minimized");

            sidebarWrap.classList.toggle("minimized");
            content.classList.toggle("minimized");

            localStorage.setItem("sidebar-minimized", isMinimized ? "true" : "false");

            collapseBtn.innerHTML = isMinimized
                ? '<i class="fa-solid fa-chevron-right"></i>'
                : '<i class="fa-solid fa-chevron-left"></i>';
        });

        document.querySelectorAll(".sb-sidenav .nav-link").forEach(link => {
            link.addEventListener("click", () => {
            });
        });
    </script>


    @RenderSection("Scripts", required: false)
</body>
</html>
