<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tình Nguyện Xanh Admin</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/admin/css/admin-style.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    @RenderSection("Styles", required: false)
</head>
<body class="sb-nav-fixed">

    <!-- Top Navbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-success shadow">
        <a class="navbar-brand ps-3" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
            <i class="fas fa-seedling me-2"></i>Tình Nguyện Xanh
        </a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>

        <ul class="navbar-nav ms-auto me-3">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown">
                    <i class="fas fa-user fa-fw"></i> Xin chào, @User.Identity?.Name
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#">Thông tin cá nhân</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <form asp-area="Identity" asp-page="/Account/Logout"
                              asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                              method="post">
                            <button type="submit" class="dropdown-item text-danger">
                                <i class="fas fa-sign-out-alt"></i> Đăng xuất
                            </button>
                        </form>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <!-- Sidebar -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark bg-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading text-muted">Tổng quan</div>
                        <a class="nav-link" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>

                        <div class="sb-sidenav-menu-heading text-muted">Quản lý</div>
                        <a class="nav-link" href="@Url.Action("Index", "Users", new { area = "Admin" })">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Tài khoản người dùng
                        </a>
                        <a class="nav-link" href="@Url.Action("Index", "Events", new { area = "Admin" })">
                            <div class="sb-nav-link-icon"><i class="fas fa-calendar-check"></i></div>
                            Hoạt động
                        </a>
                        <a class="nav-link active" href="@Url.Action("Index", "EventCategories", new { area = "Admin" })">
                            <div class="sb-nav-link-icon"><i class="fas fa-tags"></i></div>
                            Danh mục hoạt động
                        </a>
                        <a class="nav-link" href="@Url.Action("Index", "EventReports", new { area = "Admin" })">
                            <div class="sb-nav-link-icon"><i class="fas fa-flag text-warning"></i></div>
                            Báo cáo vi phạm
                            <span class="badge bg-danger ms-2">42</span>
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Đã đăng nhập với vai trò:</div>
                    <strong>Quản trị viên</strong>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div id="layoutSidenav_content">
            <main class="bg-light min-vh-100">
                <div class="container-fluid px-4 py-4">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-white mt-auto border-top">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright © Tình Nguyện Xanh @DateTime.Now.Year</div>
                        <div>
                            <a href="#">Chính sách bảo mật</a> · <a href="#">Điều khoản sử dụng</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/chart.js/Chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"></script>
    <script src="~/admin/js/scripts.js" asp-append-version="true"></script>

    <!-- CHỈ DÙNG DÒNG NÀY DUY NHẤT -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>