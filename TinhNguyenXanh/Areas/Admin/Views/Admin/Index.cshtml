@model TinhNguyenXanh.Areas.Admin.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Tổng quan";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row g-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h4>@Model.TotalEvents</h4>
                    <p class="mb-0">Tổng hoạt động</p>
                </div>
                <i class="bi bi-calendar-event fs-1"></i>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-success">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h4>@Model.TotalVolunteers</h4>
                    <p class="mb-0">Tình nguyện viên</p>
                </div>
                <i class="bi bi-person-heart fs-1"></i>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-warning">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h4>@Model.TotalReportsPending</h4>
                    <p class="mb-0">Báo cáo đang chờ</p>
                </div>
                <i class="bi bi-flag fs-1"></i>
            </div>
        </div>
    </div>
</div>

<h3 class="mt-5 mb-3">Top 5 hoạt động được yêu thích nhất</h3>
<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>STT</th>
            <th>Tiêu đề</th>
            <th>Lượt yêu thích</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Top5FavoriteEvents != null)
        {
            @foreach (var item in Model.Top5FavoriteEvents.Select((x, i) => new { Item = x, Index = i + 1 }))
            {
                <tr>
                    <td><strong>@item.Index</strong></td>
                    <td>@item.Item.Title</td>
                    <td><span class="badge bg-danger">@item.Item.FavoriteCount [Heart]</span></td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="3" class="text-center">Chưa có dữ liệu</td></tr>
        }
    </tbody>
</table>