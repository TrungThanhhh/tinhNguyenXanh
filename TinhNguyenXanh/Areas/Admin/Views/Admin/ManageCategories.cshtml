@using TinhNguyenXanh.Models
@model IEnumerable<EventCategory>

@{
    ViewData["Title"] = "Quản lý danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">
    <i class="bi bi-tags"></i> Quản lý danh mục hoạt động
</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Thêm danh mục mới</h5>
            </div>
            <div class="card-body">
                <form asp-action="AddCategory" method="post">
                    <div class="mb-3">
                        <label class="form-label">Tên danh mục</label>
                        <input type="text" name="Name" class="form-control" required maxlength="100" />
                    </div>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Thêm mới
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Danh sách danh mục (@Model.Count())</h5>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    @foreach (var cat in Model)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span><strong>@cat.Name</strong></span>
                            <div>
                                <button class="btn btn-warning btn-sm" onclick="editCategory(@cat.Id, '@cat.Name')">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <form asp-action="DeleteCategory" asp-route-id="@cat.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm"
                                            onclick="return confirm('Xóa danh mục này? Các sự kiện liên quan sẽ bị ảnh hưởng!')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal sửa danh mục -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="UpdateCategory" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Sửa danh mục</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Id" id="editId" />
                    <div class="mb-3">
                        <label>Tên danh mục</label>
                        <input type="text" name="Name" id="editName" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    function editCategory(id, name) {
        document.getElementById('editId').value = id;
        document.getElementById('editName').value = name;
        new bootstrap.Modal(document.getElementById('editModal')).show();
    }
</script>