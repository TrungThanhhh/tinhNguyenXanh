@using Humanizer
@model IEnumerable<TinhNguyenXanh.Models.Event>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    :root {
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --info: #3b82f6;
        --dark: #1e293b;
        --light: #f8fafc;
        --border: #e2e8f0;
        --gray: #94a3b8;
    }

    .page-header {
        font-weight: 700;
        color: var(--dark);
        font-size: 1.9rem;
        margin-bottom: 1.5rem;
    }

    .fade-in {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.7s ease;
    }

        .fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }

    .search-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.12);
        overflow: hidden;
        max-width: 480px;
    }

        .search-card .form-control {
            border: none;
            padding: 1rem 1.4rem;
            font-size: 1.05rem;
        }

        .search-card .btn {
            border: none;
            padding: 1rem 2rem;
            font-weight: 600;
            background: var(--success);
        }

    .approval-table {
        background: white;
        border-radius: 18px;
        overflow: hidden;
        box-shadow: 0 12px 40px rgba(0,0,0,0.12);
    }

        .approval-table thead {
            background: linear-gradient(135deg, #0891b2, #0ea5e9);
            color: white;
        }

        .approval-table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 1.2px;
            padding: 1.3rem 1rem !important;
        }

        .approval-table tbody tr {
            transition: all 0.3s ease;
            border-bottom: 1px solid var(--border);
        }

            .approval-table tbody tr:hover {
                background: #ecfdf5 !important;
                transform: translateY(-4px);
                box-shadow: 0 12px 30px rgba(0,0,0,0.1);
            }

    .event-img {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 14px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.15);
    }

    .status-badge {
        font-weight: 600;
        padding: 0.5rem 1.2rem;
        border-radius: 50px;
        font-size: 0.9rem;
    }

    .btn-approve {
        background: var(--success);
        color: white;
        padding: 0.7rem 1.8rem;
        border-radius: 50px;
        font-weight: 600;
        box-shadow: 0 6px 20px rgba(16,185,129,.3);
    }

        .btn-approve:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(16,185,129,.4);
        }

    .btn-reject {
        background: var(--danger);
        color: white;
        padding: 0.7rem 1.8rem;
        border-radius: 50px;
        font-weight: 600;
        box-shadow: 0 6px 20px rgba(239,68,68,.3);
    }

        .btn-reject:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(239,68,68,.4);
        }

    .pagination .page-link {
        color: var(--success);
        background: white;
        border: 2px solid #86efac;
        border-radius: 50% !important;
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 6px;
        font-weight: 600;
    }

        .pagination .page-item.active .page-link,
        .pagination .page-link:hover {
            background: var(--success);
            color: white;
            border-color: var(--success);
            box-shadow: 0 6px 20px rgba(16,185,129,.4);
        }
</style>

<div class="container-fluid px-4 mt-4">

    <!-- HEADER + SEARCH -->
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center mb-5 gap-4 fade-in">
        <h3 class="page-header">
            <i class="fas fa-clipboard-check me-3"></i>Duyệt Hoạt Động Tình Nguyện
        </h3>

        <form asp-action="Index" method="get" class="search-card fade-in">
            <div class="input-group">
                <input type="text" name="search" value="@ViewBag.Search"
                       class="form-control" placeholder="Tìm tiêu đề, tổ chức..." autocomplete="off" />
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>

    <!-- SUCCESS MESSAGE -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show rounded-4 shadow-sm fade-in">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- TABLE -->
    <div class="card approval-table border-0 fade-in">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4">Ảnh</th>
                            <th>Tiêu đề</th>
                            <th>Tổ chức</th>
                            <th>Danh mục</th>
                            <th>Thời gian</th>
                            <th class="text-center">Đăng ký / Tối đa</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5 text-success">
                                    <i class="fas fa-check-circle fa-4x mb-3"></i>
                                    <h5>Không có hoạt động nào đang chờ duyệt</h5>
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model.Select((e, i) => new { Event = e, Index = i }))
                            {
                                var firstImg = !string.IsNullOrWhiteSpace(item.Event.Images)
                                ? item.Event.Images.Split(',')[0].Trim()
                                : null;

                                <tr class="fade-in" style="transition-delay: @(item.Index * 0.08)s">
                                    <td class="ps-4">
                                        @if (!string.IsNullOrEmpty(firstImg))
                                        {
                                            <img src="@firstImg" class="event-img" alt="Ảnh sự kiện" />
                                        }
                                        else
                                        {
                                            <div class="bg-light event-img d-flex align-items-center justify-content-center rounded">
                                                <i class="fas fa-image text-muted fa-2x"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <strong class="text-dark">@item.Event.Title</strong>
                                        @if (!string.IsNullOrEmpty(item.Event.Description))
                                        {
                                            <br />
                                
                                            <small class="text-muted">@item.Event.Description.Truncate(70)</small>
                                        }
                                    </td>
                                    <td>@(item.Event.Organization?.Name ?? "Chưa xác định")</td>
                                    <td>
                                        <span class="badge bg-info text-white px-3 py-2">
                                            @(item.Event.Category?.Name ?? "Chưa phân loại")
                                        </span>
                                    </td>
                                    <td>
                                        <small>@item.Event.StartTime</small>
                                        <small>@item.Event.EndTime</small>
                                    </td>
                                    <td class="text-center">
                                        <span class="fs-5 fw-bold text-success">
                                            @(item.Event.Registrations?.Count ?? 0)
                                        </span>
                                        <span class="text-muted"> / @item.Event.MaxVolunteers</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="status-badge @(item.Event.Status == "draft" ? "bg-warning text-dark" : "bg-primary")">
                                            @(item.Event.Status == "draft" ? "Bản nháp" : "Chờ duyệt")
                                        </span>
                                    </td>
                                    <td class="text-center py-3">
                                        <div class="d-flex justify-content-center gap-3">
                                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.Event.Id" />
                                                <button type="submit" name="actionType" value="approve"
                                                        class="btn btn-approve shadow-lg"
                                                        onclick="return confirm('Duyệt hoạt động: @item.Event.Title ?')">
                                                    <i class="fas fa-check me-2"></i>Duyệt
                                                </button>
                                            </form>

                                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.Event.Id" />
                                                <button type="submit" name="actionType" value="reject"
                                                        class="btn btn-reject shadow-lg"
                                                        onclick="return confirm('Từ chối hoạt động: @item.Event.Title ?')">
                                                    <i class="fas fa-times me-2"></i>Từ chối
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            @if (ViewBag.TotalPages is > 1)
            {
                <nav class="p-4 bg-light border-top">
                    <ul class="pagination justify-content-center mb-0">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { search = ViewBag.Search, page = i })">
                                    @i
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Fade-in khi scroll
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.fade-in').forEach(el => observer.observe(el));

        // Tự động ẩn alert sau 6s
        setTimeout(() => {
            const alert = document.querySelector('.alert');
            if (alert) {
                alert.classList.remove('show');
                alert.classList.add('fade');
                setTimeout(() => alert.remove(), 500);
            }
        }, 6000);
    </script>
}