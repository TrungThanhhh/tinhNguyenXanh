@using TinhNguyenXanh.Models
@model EventCategory
@{
    ViewData["Title"] = "Thêm Danh mục Mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Thêm Danh mục Hoạt động</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold text-success"></label>
                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Ví dụ: Môi trường, Giáo dục, Sức khỏe..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-save"></i> Thêm danh mục
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}