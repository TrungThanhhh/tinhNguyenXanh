@model TinhNguyenXanh.DTOs.VolunteerDashboardDTO
@{
    ViewData["Title"] = "Bảng điều khiển";
}

<div class="container py-4">
    <h4 class="mb-4">Chào mừng, @User.Identity?.Name!</h4>

    <div class="row g-3">
        <div class="col-md-3">
            <div class="card text-center p-3 border-0 shadow-sm">
                <h5 class="text-primary">@Model.TotalEvents</h5>
                <p class="text-muted">Đã đăng ký</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-3 border-0 shadow-sm">
                <h5 class="text-success">@Model.CompletedEvents</h5>
                <p class="text-muted">Đã hoàn thành</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-3 border-0 shadow-sm">
                <h5 class="text-warning">@Model.PendingEvents</h5>
                <p class="text-muted">Đang chờ duyệt</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-3 border-0 shadow-sm">
                <h5 class="text-info">@Model.TotalHours</h5>
                <p class="text-muted">Giờ tình nguyện</p>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" asp-controller="Registration" class="btn btn-primary me-2">
            Xem đăng ký
        </a>
        <a asp-area="" asp-controller="Event" asp-action="Index" class="btn btn-outline-primary">
            Tìm sự kiện mới
        </a>
    </div>
</div>