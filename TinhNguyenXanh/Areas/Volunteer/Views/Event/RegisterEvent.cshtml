@model IEnumerable<TinhNguyenXanh.Models.EventRegistration>
@{
    ViewData["Title"] = "Đăng ký của tôi";
}

<div class="container py-5">
    <h4 class="mb-4">Đăng ký tham gia sự kiện</h4>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <p class="mt-3">Bạn chưa đăng ký sự kiện nào.</p>
            <a asp-area="" asp-controller="Event" asp-action="Index" class="btn btn-primary">
                Tìm sự kiện
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var r in Model)
            {
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <h6 class="card-title">@r.Event.Title</h6>
                            <p class="text-muted small">
                                <i class="bi bi-calendar"></i> @r.Event.StartTime.ToString("dd/MM/yyyy")
                            </p>
                            <p class="mb-2">
                                <strong>Trạng thái:</strong>
                                <span class="badge
                                            @(r.Status == "Pending" ? "bg-warning" :
                                                                            r.Status == "Confirmed" ? "bg-success" : "bg-danger")">
                                    @(r.Status == "Pending" ? "Chờ duyệt" :
                                                                r.Status == "Confirmed" ? "Đã duyệt" : "Bị từ chối")
                        </span>
                    </p>
                    <a asp-area="" asp-controller="Event" asp-action="Details" asp-route-id="@r.EventId"
                       class="btn btn-sm btn-outline-primary">
                        Xem chi tiết
                    </a>
                </div>
            </div>
        </div>
                }
        </div>
    }
</div>