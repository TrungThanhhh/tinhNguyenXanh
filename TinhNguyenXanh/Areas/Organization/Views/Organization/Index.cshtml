@model IEnumerable<TinhNguyenXanh.DTOs.OrganizationDTO>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Danh sách tổ chức xã hội";
    var totalOrganizations = Model.Count();
}

<div class="container mt-4">

    <!-- Thanh trên cùng -->
    <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-3">
        <h6 class="text-dark mb-0">
            <strong>@totalOrganizations</strong> tổ chức đang hoạt động
        </h6>
        <div class="d-flex align-items-center">
            <i class="bi bi-funnel me-2"></i>
            <span class="fw-semibold">Bộ lọc</span>
        </div>
    </div>

    <div class="row">
        <!-- Cột danh sách tổ chức -->
        <div class="col-lg-8 border-end pe-4">
            @foreach (var org in Model)
            {
                <div class="card mb-4 shadow-sm border-0 rounded-4 overflow-hidden position-relative">
                    <!-- Nút Lưu -->
                    <button class="btn btn-light border-0 position-absolute top-0 end-0 m-2 save-btn"
                            data-org-id="@org.Id" title="Lưu tổ chức">
                        <i class="bi bi-bookmark fs-5 text-primary"></i>
                    </button>

                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="~/images/organization.jpg"
                                 class="img-fluid w-100 h-100 object-fit-cover"
                                 alt="Organization"
                                 style="height: 200px; object-fit: cover;" />
                        </div>

                        <div class="col-md-8">
                            <div class="card-body p-3">
                                <h5 class="fw-bold mb-2 text-dark">@org.Name</h5>
                                <p class="mb-1 text-muted">
                                    <i class="bi bi-person-circle"></i>
                                    @org.UserName
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-calendar-event"></i>
                                    Tham gia ngày @org.JoinedDate.ToString("dd/MM/yyyy")
                                </p>

                                <p class="text-muted small mb-2">
                                    @org.Description
                                </p>
@* 
                                <span class="badge @(org.Verified ? "bg-success" : "bg-warning text-dark")">
                                    @(org.Verified ? "Đã xác minh" : "Chưa xác minh")
                                </span> *@

                                <a href="@Url.Action("Details", "Organization", new { area = "Organization", id = org.Id })"
                                   class="btn btn-outline-primary btn-sm float-end px-3 mt-2">
                                    Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="alert alert-warning mt-3">
                    <i class="bi bi-info-circle"></i> Hiện chưa có tổ chức nào trong hệ thống.
                </div>
            }

            <!-- Phân trang -->
            <div class="d-flex justify-content-center border-top pt-3">
                <nav>
                    <ul class="pagination mb-0">
                        <li class="page-item disabled"><span class="page-link">&lt;</span></li>
                        <li class="page-item active"><span class="page-link">1</span></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><span class="page-link">...</span></li>
                        <li class="page-item"><a class="page-link" href="#">50</a></li>
                        <li class="page-item"><a class="page-link" href="#">&gt;</a></li>
                    </ul>
                </nav>
            </div>
        </div>

        <!-- Cột tin tức -->
        <div class="col-lg-4 ps-4">
            <h5 class="fw-bold mb-3 text-dark">Tin tức</h5>

            <div class="d-flex mb-3 shadow-sm p-2 rounded-3 border">
                <img src="~/images/news.jpg"
                     class="me-3 rounded"
                     style="width: 90px; height: 90px; object-fit: cover;">
                <div>
                    <p class="mb-1 fw-semibold">Đoàn phường Tam Hiệp tổ chức “Ngày chủ nhật xanh”</p>
                    <small class="text-muted">20/10/2025</small>
                </div>
            </div>

            <div class="d-flex mb-3 shadow-sm p-2 rounded-3 border">
                <img src="~/images/news2.jpg"
                     class="me-3 rounded"
                     style="width: 90px; height: 90px; object-fit: cover;">
                <div>
                    <p class="mb-1 fw-semibold">CLB Sinh viên Tình nguyện – Kết nối yêu thương</p>
                    <small class="text-muted">18/10/2025</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Xử lý khi nhấn nút Save
        document.querySelectorAll(".save-btn").forEach(btn => {
            btn.addEventListener("click", function () {
                const icon = this.querySelector("i");
                const isSaved = icon.classList.contains("bi-bookmark-fill");

                if (isSaved) {
                    icon.classList.remove("bi-bookmark-fill");
                    icon.classList.add("bi-bookmark");
                    this.title = "Lưu tổ chức";
                } else {
                    icon.classList.remove("bi-bookmark");
                    icon.classList.add("bi-bookmark-fill");
                    this.title = "Đã lưu";
                }

                // (Tuỳ chọn) Gửi yêu cầu AJAX đến controller để lưu vào database
                // fetch(`/Organization/Save/${this.dataset.orgId}`, { method: 'POST' });
            });
        });
    </script>
}
