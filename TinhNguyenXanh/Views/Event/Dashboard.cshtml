@model TinhNguyenXanh.DTOs.VolunteerDashboardDTO
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-5">
    <h3 class="mb-4">Chào mừng, <strong>@User.Identity?.Name</strong>!</h3>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card text-center p-4 border-0 shadow-sm bg-primary text-white">
                <h2>@Model.TotalEvents</h2>
                <p>Đã đăng ký</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-4 border-0 shadow-sm bg-success text-white">
                <h2>@Model.CompletedEvents</h2>
                <p>Hoàn thành</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-4 border-0 shadow-sm bg-warning text-white">
                <h2>@Model.PendingEvents</h2>
                <p>Chờ duyệt</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-4 border-0 shadow-sm bg-info text-white">
                <h2>@Model.TotalHours</h2>
                <p>Giờ tình nguyện</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <a asp-action="Index" class="btn btn-lg btn-outline-primary w-100">
                Tìm sự kiện mới
            </a>
        </div>
        <div class="col-md-6 mb-3">
            <a asp-action="MyRegistrations" class="btn btn-lg btn-outline-success w-100">
                Xem đăng ký
            </a>
        </div>
    </div>
</div>