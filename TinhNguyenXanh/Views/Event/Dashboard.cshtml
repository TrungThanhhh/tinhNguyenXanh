@model TinhNguyenXanh.DTOs.VolunteerDashboardDTO
@{
    ViewData["Title"] = "Bảng điều khiển Tình nguyện viên";
}

<style>
    .dashboard-header {
        background: linear-gradient(135deg, #1e293b, #0f172a);
        color: white;
        padding: 2rem;
        border-radius: 16px;
        margin-bottom: 2rem;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }

    .stat-card {
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 1px solid #e2e8f0;
    }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
        }

    .stat-icon {
        font-size: 2.2rem;
        width: 72px;
        height: 72px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
    }

    .stat-number {
        font-size: 2.25rem;
        font-weight: 800;
        line-height: 1;
        color: var(--bs-gray-900);
    }

    .stat-label {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--bs-gray-700);
    }

    .stat-help {
        font-size: 0.85rem;
        color: var(--bs-gray-500);
        margin-top: 0.5rem;
    }

    .action-btn {
        padding: 1rem;
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 14px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
    }

    .btn-primary-outline {
        background: white;
        border: 2px solid #3b82f6;
        color: #3b82f6;
    }

        .btn-primary-outline:hover {
            background: #3b82f6;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(59, 130, 246, 0.3);
        }

    .btn-success-outline {
        background: white;
        border: 2px solid #10b981;
        color: #10b981;
    }

        .btn-success-outline:hover {
            background: #10b981;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.3);
        }

    @@media (max-width: 768px) {
        .dashboard-header {
            text-align: center;
        }

        .stat-card {
            margin-bottom: 1.5rem;
        }
    }
</style>

<div class="container py-4">
    <!-- Header -->
    <div class="dashboard-header text-center">
        <h1 class="fw-bold mb-2">Chào mừng, <span class="text-emphasis">@User.Identity?.Name!</span></h1>
        <p class="mb-0 opacity-90">Hành trình tình nguyện của bạn đang góp phần tạo nên những thay đổi tích cực</p>
    </div>

    <!-- Thống kê nhanh -->
    <div class="row g-4 mb-5">
        <!-- Đã đăng ký -->
        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0">
                <div class="card-body text-center p-4">
                    <div class="stat-icon bg-blue-100 text-blue-600">
                        <i class="bi bi-calendar-plus"></i>
                    </div>
                    <div class="stat-number text-primary">@Model.TotalEvents</div>
                    <div class="stat-label">Đã đăng ký</div>
                    <div class="stat-help">
                        Các sự kiện bạn đã gửi đăng ký (đang chờ xác nhận từ tổ chức)
                    </div>
                </div>
            </div>
        </div>

        <!-- Hoàn thành -->
        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0">
                <div class="card-body text-center p-4">
                    <div class="stat-icon bg-green-100 text-green-600">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <div class="stat-number text-success">@Model.CompletedEvents</div>
                    <div class="stat-label">Hoàn thành</div>
                    <div class="stat-help">
                        Sự kiện bạn đã tham gia và nhận chứng nhận
                    </div>
                </div>
            </div>
        </div>

        <!-- Chờ duyệt -->
        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0">
                <div class="card-body text-center p-4">
                    <div class="stat-icon bg-amber-100 text-amber-600">
                        <i class="bi bi-hourglass-split"></i>
                    </div>
                    <div class="stat-number text-warning">@Model.PendingEvents</div>
                    <div class="stat-label">Chờ phản hồi</div>
                    <div class="stat-help">
                        Ban tổ chức chưa xác nhận hoặc từ chối đăng ký
                    </div>
                </div>
            </div>
        </div>

        <!-- Giờ tình nguyện -->
        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0">
                <div class="card-body text-center p-4">
                    <div class="stat-icon bg-cyan-100 text-cyan-600">
                        <i class="bi bi-clock-history"></i>
                    </div>
                    <div class="stat-number text-info">@Model.TotalHours</div>
                    <div class="stat-label">Giờ tình nguyện</div>
                    <div class="stat-help">
                        Tổng thời gian bạn đã đóng góp cho cộng đồng
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hành động nhanh -->
    <div class="row g-3 mb-5">
        <div class="col-md-6">
            <a asp-action="Index" asp-controller="Event"
               class="btn action-btn btn-primary-outline w-100">
                <i class="bi bi-search"></i>
                Tìm sự kiện mới
            </a>
        </div>
        <div class="col-md-6">
            <a asp-action="MyRegistrations"
               class="btn action-btn btn-success-outline w-100">
                <i class="bi bi-list-check"></i>
                Xem đăng ký của tôi
            </a>
        </div>
    </div>

    <!-- Gợi ý minh bạch -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <h5 class="fw-bold mb-3">
                <i class="bi bi-lightbulb text-primary me-2"></i>
                Gợi ý cho bạn
            </h5>
            <p class="mb-0 text-muted">
                <i>Dựa trên kỹ năng và lịch sử tham gia của bạn, chúng tôi đề xuất:</i>
            </p>
            <ul class="mt-2 mb-0">
                <li class="mb-1">Cập nhật hồ sơ để nhận gợi ý chính xác hơn</li>
                <li class="mb-1">Sự kiện có yêu cầu "Dạy học" phù hợp với bạn</li>
                <li>Chứng nhận PDF sẽ được cấp tự động sau khi hoàn thành</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}