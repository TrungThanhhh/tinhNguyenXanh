@model TinhNguyenXanh.DTOs.EventDTO
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        :root {
            --primary-color: #16a34a;
            --primary-hover: #15803d;
            --secondary-color: #3b82f6;
            --accent-light: #f0fdf4;
            --text-dark: #0f172a;
            --text-muted: #64748b;
            --border-color: #e5e7eb;
            --bg-light: #f8f9fa;
            --card-bg: #ffffff;
            --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.08);
        }

        body {
            background: var(--bg-light);
            font-family: "Segoe UI", sans-serif;
            color: var(--text-dark);
        }

        .event-detail-container {
            padding: 2rem 0;
            min-height: 100vh;
        }

        .hero-section {
            margin-bottom: 2.5rem;
            background: var(--card-bg);
            border-radius: 16px;
            overflow: hidden;
            border: 1px solid var(--border-color);
            box-shadow: var(--shadow-md);
        }

        .event-hero-image {
            width: 100%;
            height: 400px;
            object-fit: cover;
            background: var(--accent-light);
        }

        .event-header-content {
            padding: 2rem 3rem;
        }

        .event-main-title {
            font-size: 2.25rem;
            font-weight: 800;
            line-height: 1.3;
            margin-bottom: 0.75rem;
        }

        .event-organization {
            font-size: 1rem;
            color: var(--text-muted);
            margin-bottom: 1.5rem;
        }

        .status-badge {
            display: inline-flex;
            padding: 0.5rem 1.25rem;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            align-items: center;
            gap: 0.5rem;
        }

        .status-badge.approved {
            background: #dcfce7;
            color: #15803d;
        }

        .status-badge.pending {
            background: #fef3c7;
            color: #92400e;
        }

        .stats-bar {
            display: flex;
            justify-content: space-around;
            padding: 1rem 0;
            border-top: 1px dashed var(--border-color);
            margin-top: 1.5rem;
        }

        .stat-item {
            text-align: center;
        }

        .info-card {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow-sm);
        }

        .info-card-title {
            color: var(--primary-color);
            font-weight: 700;
            font-size: 1.25rem;
            padding-bottom: 0.5rem;
            margin-bottom: 1.5rem;
            border-bottom: 3px solid var(--accent-light);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .map-container {
            border-radius: 12px;
            overflow: hidden;
            box-shadow: var(--shadow-sm);
        }

        .register-card {
            position: sticky;
            top: 2rem;
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 16px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow-md);
            text-align: center;
        }

        .btn-register-success {
            background: var(--primary-color);
            color: white;
            border: none;
            padding: 1rem 1.5rem;
            border-radius: 10px;
            font-weight: 700;
            font-size: 1rem;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            width: 100%;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .alert {
            border-radius: 10px;
            border: 1px solid;
            margin-bottom: 1.5rem;
            padding: 1rem;
            font-weight: 600;
        }

        .alert-success {
            background: #dcfce7;
            border-color: #86efac;
            color: #15803d;
        }

        .alert-danger {
            background: #fee2e2;
            border-color: #fca5a5;
            color: #991b1b;
        }

        .alert-warning {
            background: #fef3c7;
            border-color: #fde047;
            color: #92400e;
        }

        .news-section {
            margin-top: 2rem;
        }

        .news-title {
            color: var(--text-dark);
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid var(--border-color);
        }

        .news-item {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 1rem;
            margin-bottom: 0.75rem;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .news-image {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 8px;
            flex-shrink: 0;
        }

        /* --- Comment styles --- */
        .comments-wrapper {
            margin-top: 2rem;
        }

        .comment-box {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 1rem;
            box-shadow: var(--shadow-sm);
        }

        .comment-item {
            border-bottom: 1px dashed var(--border-color);
            padding: 0.75rem 0;
        }

        .comment-item:last-child {
            border-bottom: none;
        }

        .comment-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--primary-color);
        }

        .comment-content {
            white-space: pre-wrap;
            word-break: break-word;
        }

        .comment-meta {
            font-size: 0.85rem;
            color: var(--text-muted);
        }

        .btn-comment {
            background: var(--primary-color);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 8px;
        }

        .btn-comment:disabled {
            opacity: 0.6;
        }

        /* Responsive */
        media (max-width: 991px) {
            .event-hero-image { height: 300px; }
            .register-card { position: static; margin-top: 1.5rem; }
        }
    </style>
</head>
<body>
    <div class="event-detail-container">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">

                    <div class="hero-section">
                        <div class="row g-0">
                            <div class="col-md-5">
                                <img src="@(string.IsNullOrEmpty(Model.Images) ? "/images/default-event.png" : Model.Images)"
                                     class="event-hero-image" alt="@Model.Title" />
                            </div>

                            <div class="col-md-7">
                                <div class="event-header-content">
                                    <h1 class="event-main-title">@Model.Title</h1>

                                    <div class="event-organization">
                                        <i class="bi bi-people-fill me-2"></i>
                                        Tổ chức bởi: <strong>@Model.OrganizationName</strong>
                                    </div>

                                    <span class="status-badge @(Model.Status == "approved" ? "approved" : "pending")">
                                        <i class="bi @(Model.Status == "approved" ? "bi-check-circle-fill" : "bi-hourglass-split")"></i>
                                        @(Model.Status == "approved" ? "Đã duyệt" : "Chờ duyệt")
                                    </span>

                                    <div class="stats-bar">
                                        <div class="stat-item">
                                            <i class="bi bi-calendar-event"></i>
                                            <strong>@Model.StartTime.ToString("dd/MM")</strong>
                                            <small>Ngày bắt đầu</small>
                                        </div>
                                        <div class="stat-item">
                                            <i class="bi bi-clock"></i>
                                            <strong>@Model.StartTime.ToString("HH:mm")</strong>
                                            <small>Thời gian</small>
                                        </div>
                                        <div class="stat-item">
                                            <i class="bi bi-geo-alt"></i>
                                            <strong>@(Model.Location?.Split(',').Last() ?? "")</strong>
                                            <small>Địa điểm chính</small>
                                        </div>
                                        <div class="stat-item">
                                            <i class="bi bi-person-check"></i>
                                            <strong>@Model.MaxVolunteers</strong>
                                            <small>Tình nguyện viên</small>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="info-card">
                        <h6 class="info-card-title">
                            <i class="bi bi-journal-text"></i>
                            Mô tả chi tiết
                        </h6>
                        <p>@Html.Raw(Model.Description)</p>
                    </div>

                    <div class="info-card">
                        <h6 class="info-card-title">
                            <i class="bi bi-info-circle"></i>
                            Thông tin bổ sung
                        </h6>
                        <p><strong>Danh mục:</strong> @Model.CategoryName</p>
                        <p><strong>Ngày kết thúc:</strong> @Model.EndTime.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.LocationCoords))
                    {
                        var coords = Model.LocationCoords.Split(',');
                        var lat = coords[0].Trim();
                        var lng = coords[1].Trim();
                        var mapUrl = $"https://maps.google.com/maps?q={lat},{lng}&hl=vi&z=14&output=embed";

                        <div class="info-card">
                            <h6 class="info-card-title">
                                <i class="bi bi-map"></i>
                                Vị trí chính xác
                            </h6>
                            <div class="map-container">
                                <iframe src="@mapUrl" allowfullscreen="" loading="lazy"></iframe>
                            </div>
                            <p class="text-muted mt-3 mb-0"><i class="bi bi-pin-map me-2"></i>Địa chỉ: @Model.Location</p>
                        </div>
                    }

                    <!-- ===== Comments Section ===== -->
                    <div class="comments-wrapper">
                        <div id="comments-root" class="comment-box">
                            <!-- Header -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="mb-0">Bình luận</h5>
                                <small class="text-muted" id="comments-count">Đang tải...</small>
                            </div>

                            <!-- New comment form -->
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <form id="comment-form" class="mb-3" method="post" enctype="multipart/form-data">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="EventId" value="@Model.Id" />
                                    <div class="mb-2">
                                        <textarea name="Content" id="comment-content" class="form-control" rows="3" placeholder="Viết bình luận..." maxlength="1000" required></textarea>
                                    </div>
                                    <div class="d-flex justify-content-end gap-2">
                                        <button type="submit" id="btn-submit-comment" class="btn-comment">Gửi bình luận</button>
                                    </div>
                                </form>
                            }
                            else
                            {
                                <div class="mb-3">
                                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-sm">Đăng nhập để bình luận</a>
                                </div>
                            }

                            <!-- Comments list -->
                            <div id="comments-list">
                                <div class="text-center text-muted py-3">Đang tải bình luận...</div>
                            </div>
                        </div>
                    </div>
                    <!-- ===== End Comments Section ===== -->

                </div>

                <div class="col-lg-4">

                    <div class="register-card">
                        <div class="register-card-header">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Tham gia hoạt động
                        </div>

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-success">
                                <i class="bi bi-check-circle-fill me-2"></i> @TempData["Message"]
                            </div>
                        }
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-x-octagon-fill me-2"></i> @TempData["Error"]
                            </div>
                        }

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            if (ViewBag.RegistrationStatus == "Pending")
                            {
                                <div class="alert alert-warning">
                                    <i class="bi bi-hourglass-split me-2"></i> Đăng ký của bạn <strong>đang chờ duyệt</strong>
                                </div>
                            }
                            else if (ViewBag.RegistrationStatus == "Confirmed")
                            {
                                <div class="alert alert-success">
                                    <i class="bi bi-check-circle-fill me-2"></i> Bạn <strong>đã được duyệt</strong> tham gia!
                                </div>
                            }
                            else if (ViewBag.RegistrationStatus == "Rejected")
                            {
                                <div class="alert alert-danger">
                                    <i class="bi bi-x-circle-fill me-2"></i> Đăng ký của bạn <strong>đã bị từ chối</strong>
                                </div>
                            }
                            else
                            {
                                <a asp-action="RegisterEvent" asp-route-id="@Model.Id" class="btn-register-success">
                                    <i class="bi bi-plus-circle-fill"></i>
                                    Đăng ký tham gia ngay
                                </a>
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                Vui lòng đăng nhập để đăng ký tham gia hoạt động này.
                            </div>
                            <a asp-area="Identity" asp-page="/Account/Login"
                               asp-route-returnUrl="@Url.Action("Details", "Event", new { id = Model.Id })"
                               class="btn-register-success">
                                <i class="bi bi-person-fill"></i>
                                Đăng nhập/Đăng ký
                            </a>
                        }
                    </div>

                    <div class="news-section">
                        <h5 class="news-title">Tin tức liên quan</h5>

                        <a href="#" class="news-item text-decoration-none d-block">
                            <div class="d-flex gap-3 align-items-center">
                                <img src="/images/1.jpg" class="news-image" alt="Hội thảo bảo vệ môi trường" />
                                <div class="news-content">
                                    <p>Hội thảo bảo vệ môi trường và giải pháp công nghệ xanh</p>
                                    <small class="news-date"><i class="bi bi-calendar me-1"></i> 15/04/2025</small>
                                </div>
                            </div>
                        </a>

                        <a href="#" class="news-item text-decoration-none d-block">
                            <div class="d-flex gap-3 align-items-center">
                                <img src="/images/2.jpg" class="news-image" alt="Trồng cây xanh vì TP.HCM xanh" />
                                <div class="news-content">
                                    <p>Chiến dịch "Cây xanh vì TP.HCM" vượt mục tiêu 1000 cây</p>
                                    <small class="news-date"><i class="bi bi-calendar me-1"></i> 20/04/2025</small>
                                </div>
                            </div>
                        </a>

                        <a href="#" class="news-item text-decoration-none d-block">
                            <div class="d-flex gap-3 align-items-center">
                                <img src="/images/3.jpg" class="news-image" alt="Hoạt động gây quỹ cộng đồng" />
                                <div class="news-content">
                                    <p>Phát động hoạt động gây quỹ cộng đồng hỗ trợ trẻ em vùng cao</p>
                                    <small class="news-date"><i class="bi bi-calendar me-1"></i> 25/04/2025</small>
                                </div>
                            </div>
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        (function () {
            const eventId = @Model.Id;
            const commentsListEl = document.getElementById('comments-list');
            const commentsCountEl = document.getElementById('comments-count');
            const commentForm = document.getElementById('comment-form');
            const antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

            // Load comments
            async function loadComments() {
                try {
                    const res = await fetch('@Url.Action("GetComments", "Event")?eventId=' + eventId, {
                        headers: { 'X-Requested-With': 'XMLHttpRequest' }
                    });
                    if (!res.ok) throw new Error('Không thể tải bình luận');
                    const html = await res.text();
                    commentsListEl.innerHTML = html;
                    // update count if server rendered count available
                    const count = commentsListEl.querySelectorAll('.comment-item').length;
                    commentsCountEl.textContent = count + ' bình luận';
                    attachDeleteHandlers();
                } catch (err) {
                    commentsListEl.innerHTML = '<div class="text-danger p-3">Lỗi khi tải bình luận.</div>';
                    commentsCountEl.textContent = '0 bình luận';
                }
            }

            // Submit new comment
            if (commentForm) {
                commentForm.addEventListener('submit', async function (e) {
                    e.preventDefault();
                    const btn = document.getElementById('btn-submit-comment');
                    const contentEl = document.getElementById('comment-content');
                    const content = contentEl.value.trim();
                    if (!content) return;

                    btn.disabled = true;
                    btn.textContent = 'Đang gửi...';

                    const formData = new FormData();
                    formData.append('EventId', eventId);
                    formData.append('Content', content);

                    try {
                        const res = await fetch('@Url.Action("PostComment", "Event")', {
                            method: 'POST',
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest',
                                'RequestVerificationToken': antiForgeryToken
                            },
                            body: formData
                        });

                        if (!res.ok) {
                            const txt = await res.text();
                            throw new Error(txt || 'Lỗi khi gửi bình luận');
                        }

                        const newCommentHtml = await res.text();
                        // Prepend new comment
                        commentsListEl.insertAdjacentHTML('afterbegin', newCommentHtml);
                        contentEl.value = '';
                        // update count
                        const count = commentsListEl.querySelectorAll('.comment-item').length;
                        commentsCountEl.textContent = count + ' bình luận';
                        attachDeleteHandlers();
                    } catch (err) {
                        alert(err.message || 'Gửi bình luận thất bại');
                    } finally {
                        btn.disabled = false;
                        btn.textContent = 'Gửi bình luận';
                    }
                });
            }

            // Attach delete handlers
            function attachDeleteHandlers() {
                document.querySelectorAll('.btn-delete-comment').forEach(btn => {
                    if (btn.dataset.bound) return;
                    btn.dataset.bound = '1';
                    btn.addEventListener('click', async function (e) {
                        e.preventDefault();
                        if (!confirm('Bạn có chắc muốn xóa bình luận này?')) return;
                        const id = this.dataset.id;
                        try {
                            const res = await fetch('@Url.Action("DeleteComment", "Event")', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/x-www-form-urlencoded',
                                    'RequestVerificationToken': antiForgeryToken
                                },
                                body: 'id=' + encodeURIComponent(id)
                            });
                            if (!res.ok) throw new Error('Không thể xóa bình luận');
                            // remove element
                            const el = document.querySelector('.comment-item[data-comment-id="' + id + '"]');
                            if (el) el.remove();
                            const count = commentsListEl.querySelectorAll('.comment-item').length;
                            commentsCountEl.textContent = count + ' bình luận';
                        } catch (err) {
                            alert(err.message || 'Xóa bình luận thất bại');
                        }
                    });
                });
            }

            // Initial load
            loadComments();
        })();
    </script>
</body>
</html>
