@model TinhNguyenXanh.DTOs.EventRegistrationDTO
@{
    ViewData["Title"] = "Đăng ký: " + Model.EventTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-success text-white text-center py-3">
                    <h4 class="mb-0">ĐĂNG KÝ THAM GIA</h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info mb-4">
                        <strong>@Model.EventTitle</strong><br />
                        <small>
                            Thời gian: @Model.StartTime.ToString("dd/MM/yyyy HH:mm") - @Model.EndTime.ToString("HH:mm")<br />
                            Địa điểm: @Model.Location
                        </small>
                    </div>

                    <form asp-action="RegisterEvent" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="EventId" />

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Họ và tên</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Số điện thoại</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Reason" class="form-label">Lý do tham gia</label>
                            <textarea asp-for="Reason" class="form-control" rows="4" placeholder="Tôi muốn đóng góp vì..."></textarea>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-outline-secondary">
                                Quay lại
                            </a>
                            <button type="submit" class="btn btn-success flex-fill">
                                Gửi đăng ký
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}