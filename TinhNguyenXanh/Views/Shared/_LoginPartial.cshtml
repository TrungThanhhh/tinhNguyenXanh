@using Microsoft.AspNetCore.Identity
@using TinhNguyenXanh.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<style>
    /* Login/Register Buttons */
    .auth-buttons .nav-link {
        font-weight: 600;
        padding: 0.6rem 1.5rem !important;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-register {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: white !important;
        border: none;
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
        }

    .btn-login {
        border: 2px solid var(--primary-color);
        color: var(--primary-color) !important;
        background: transparent;
    }

        .btn-login:hover {
            background: var(--primary-color);
            color: white !important;
        }

    /* User Dropdown */
    .user-dropdown .dropdown-toggle {
        background: linear-gradient(135deg, #f0fdf4, #ecfdf5);
        border: 2px solid var(--border-color);
        padding: 0.6rem 1.2rem !important;
        border-radius: 50px;
        font-weight: 600;
        color: var(--text-dark) !important;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .user-dropdown .dropdown-toggle:hover {
            border-color: var(--primary-color);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2);
        }

        .user-dropdown .dropdown-toggle::after {
            margin-left: 8px;
            border-top-color: var(--primary-color);
        }

    .user-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 14px;
    }

    .user-dropdown .dropdown-menu {
        border-radius: 12px;
        border: none;
        box-shadow: 0 10px 40px rgba(0,0,0,0.15);
        padding: 0.5rem;
        min-width: 280px;
        margin-top: 10px;
    }

    .user-dropdown .dropdown-item {
        padding: 0.8rem 1.2rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 500;
    }

        .user-dropdown .dropdown-item:hover {
            background: var(--primary-light);
            color: var(--primary-dark);
            padding-left: 1.5rem;
        }

        .user-dropdown .dropdown-item i {
            font-size: 1.1rem;
            width: 20px;
            text-align: center;
        }

    .user-dropdown .dropdown-divider {
        margin: 0.5rem 0;
        border-color: var(--border-color);
    }

    .dropdown-header-custom {
        padding: 0.8rem 1.2rem;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: white;
        border-radius: 8px;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .badge-role {
        background: linear-gradient(135deg, #fef3c7, #fde68a);
        color: #92400e;
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 700;
        margin-left: 8px;
    }

    .logout-btn {
        color: #dc2626 !important;
        background: transparent;
        border: none;
        width: 100%;
        text-align: left;
        padding: 0.8rem 1.2rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 500;
        cursor: pointer;
    }

        .logout-btn:hover {
            background: #fee2e2;
            padding-left: 1.5rem;
        }

    /* Notification Badge */
    .notification-badge {
        position: absolute;
        top: -5px;
        right: -5px;
        background: #ef4444;
        color: white;
        border-radius: 50%;
        width: 18px;
        height: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 10px;
        font-weight: 700;
        border: 2px solid white;
    }

    /* Responsive */
    @@media (max-width: 991px) {
        .auth-buttons {
            margin-top: 1rem;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .user-dropdown .dropdown-toggle {
            width: 100%;
            justify-content: center;
        }
    }
</style>

@if (SignInManager.IsSignedIn(User))
{
    var currentUser = await UserManager.GetUserAsync(User);
    var roles = await UserManager.GetRolesAsync(currentUser);
    var isOrganizer = roles.Contains("Organizer");

    <ul class="navbar-nav user-dropdown">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle"
               href="#"
               id="userDropdown"
               role="button"
               data-bs-toggle="dropdown"
               aria-expanded="false">
                <div class="user-avatar">
                    @(currentUser.FullName?.Substring(0, 1).ToUpper() ?? "U")
                </div>
                <span class="d-none d-lg-inline">@currentUser.FullName</span>
                @if (isOrganizer)
                {
                    <span class="badge-role">
                        <i class="bi bi-building-fill-check"></i> BTC
                    </span>
                }
            </a>

            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <!-- User Info Header -->
                <li class="dropdown-header-custom">
                    <div class="d-flex align-items-center">
                        <div class="user-avatar me-2">
                            @(currentUser.FullName?.Substring(0, 1).ToUpper() ?? "U")
                        </div>
                        <div>
                            <div class="fw-bold">@currentUser.FullName</div>
                            <small style="opacity: 0.9;">@currentUser.Email</small>
                        </div>
                    </div>
                </li>

                <!-- Main Menu Items -->
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="bi bi-person-circle"></i>
                        Tài khoản của tôi
                    </a>
                </li>

                @if (isOrganizer)
                {
                    <!-- Organization Link -->
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <a class="dropdown-item" asp-area="Organizer" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-building-gear"></i>
                            <div>
                                <div class="fw-semibold">Quản lý Tổ chức</div>
                                <small class="text-muted" style="font-size: 11px;">Dashboard & Sự kiện</small>
                            </div>
                        </a>
                    </li>
                }
                else
                {
                    <!-- Register Organization -->
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <a class="dropdown-item" asp-area="" asp-controller="Organization" asp-action="Register">
                            <i class="bi bi-building-add"></i>
                            <div>
                                <div class="fw-semibold">Đăng ký Tổ chức</div>
                                <small class="text-muted" style="font-size: 11px;">Tạo và quản lý sự kiện</small>
                            </div>
                        </a>
                    </li>
                }

                <!-- Volunteer Menu -->
                <li><hr class="dropdown-divider" /></li>
                <li>
                    <a class="dropdown-item" href="#">
                        <i class="bi bi-heart"></i>
                        Sự kiện đã đăng ký
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="#">
                        <i class="bi bi-bookmark"></i>
                        Đã lưu
                    </a>
                </li>

                <!-- Settings -->
                <li><hr class="dropdown-divider" /></li>
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">
                        <i class="bi bi-key"></i>
                        Đổi mật khẩu
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="#">
                        <i class="bi bi-gear"></i>
                        Cài đặt
                    </a>
                </li>

                <!-- Logout -->
                <li><hr class="dropdown-divider" /></li>
                <li>
                    <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm" class="m-0">
                        <button type="submit" class="logout-btn">
                            <i class="bi bi-box-arrow-right"></i>
                            Đăng xuất
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    <!-- Not Logged In -->
    <ul class="navbar-nav auth-buttons">
        <li class="nav-item">
            <a class="nav-link btn-login" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right me-1"></i>
                Đăng nhập
            </a>
        </li>
        <li class="nav-item ms-2">
            <a class="nav-link btn-register" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus me-1"></i>
                Đăng ký
            </a>
        </li>
    </ul>
}

<script>
    // Close dropdown when clicking outside
    document.addEventListener('click', function(event) {
        const dropdown = document.querySelector('.user-dropdown .dropdown-menu');
        const toggle = document.querySelector('.user-dropdown .dropdown-toggle');

        if (dropdown && toggle) {
            if (!dropdown.contains(event.target) && !toggle.contains(event.target)) {
                dropdown.classList.remove('show');
            }
        }
    });

    // Prevent dropdown from closing when clicking inside
    document.querySelectorAll('.user-dropdown .dropdown-menu').forEach(menu => {
        menu.addEventListener('click', function(e) {
            e.stopPropagation();
        });
    });
</script>